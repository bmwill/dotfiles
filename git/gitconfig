[include]
	path = ~/.gitconfig.local

[core]
	excludesfile = ~/.gitignore
	editor = vim
[alias]
	# list all aliases
	la = "!git config -l | grep '^alias' | cut -c 7-"
	unstage = reset HEAD --
	last = log -1 HEAD
	discard = checkout --
	amend = commit -v --amend
	reword = commit -v --amend --only
	extend = commit -v --amend --no-edit
