{
    "list.maxHeight": 15,
    "list.insertMappings": {
        "<C-c>": "do:exit", // Use CTRL-C to exit
        "<C-t>": "action:tabe",
        "<C-v>": "action:vsplit"
    },
    "list.normalMappings": {
        "<C-c>": "do:exit", // Use CTRL-C to exit
        "t": "action:tabe",
        "v": "action:vsplit"
    },

    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.checkOnSave.command": "clippy"
}
